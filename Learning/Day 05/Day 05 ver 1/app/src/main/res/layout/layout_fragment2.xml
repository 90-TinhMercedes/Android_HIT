<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B703A9F4">

        <TextView
            android:id="@+id/tv_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Fragment 02"
            android:textSize="20sp" />
        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_fragment2"
            android:text="Move to F1"
            android:id="@+id/btnMoveToFragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_centerInParent="true"
            android:layout_below="@id/btnMoveToFragment1"
            android:id="@+id/btnMoveToActivity2"
            android:text="Move To Activity 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</layout>