<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">

    <RelativeLayout
        android:id="@+id/relative_layout_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8FF9800"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FAQ"
            android:textColor="#E91E63"
            android:textSize="50sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_layout_faq"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_faq_01"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="1. Ứng dụng Search Ncovi là gì?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_faq_02"
            android:layout_below="@+id/tv_faq_01"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="2. Ứng dụng có chứa phần mềm độc hại gây hại cho thiết bị không?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_faq_03"
            android:layout_below="@+id/tv_faq_02"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="3. Tại sao Search Ncovi cần quyền truy cập Internet? Nếu thiết bị không có Internet thì ứng dụng có hoạt động không?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_faq_04"
            android:layout_below="@+id/tv_faq_03"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="4. Search Ncovi có theo dõi vị trí người dùng không?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_faq_05"
            android:layout_below="@+id/tv_faq_04"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="5. Dữ liệu thu thập và lưu trong máy có tốn nhiều bộ nhớ không?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_faq_06"
            android:layout_below="@+id/tv_faq_05"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="6. Tại sao khi tìm kiếm có thể hiển thị ra nhiều kết quả của một khu vực?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_faq_07"
            android:layout_below="@+id/tv_faq_06"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="7. Tôi thấy sai số so với trang thống kê trên Google?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_faq_07"
            android:text="Phản hồi và đóng góp ý kiến tại:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/tv_email_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_request"
            android:layout_marginTop="0dp"
            android:text="chitinh.dev.contact@gmail.com"
            android:textColor="#4F6AFF"
            android:textSize="18sp"
            android:textStyle="italic" />


    </RelativeLayout>

</RelativeLayout>

