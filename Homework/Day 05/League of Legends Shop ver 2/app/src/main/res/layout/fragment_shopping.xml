<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C3289F94"
        android:padding="0dp">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/img_logo"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_01">
        </ImageView>

        <ImageView
            android:id="@+id/img_logo_your_cart"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/img_logo"
            android:src="@drawable/logo_lmht">
        </ImageView>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_sum_amount"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="59dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_amount_product"
            android:gravity="center"
            android:text="00"
            android:textSize="22sp"
            android:textStyle="bold">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/rcv_lol_items"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_below="@+id/img_logo"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_listview"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_sum_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcv_lol_items"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edt_dang_nhap"
            android:drawableEnd="@drawable/money_bag"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="000000"
            android:textSize="25sp"
            android:textStyle="bold|italic">
        </TextView>
<!--        <ProgressBar-->
<!--            android:id="@+id/progress_load_data"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:paddingRight="25dp"-->
<!--            android:paddingLeft="25dp"-->
<!--            style="@android:style/Widget.ProgressBar.Horizontal"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->

    </RelativeLayout>

</layout>