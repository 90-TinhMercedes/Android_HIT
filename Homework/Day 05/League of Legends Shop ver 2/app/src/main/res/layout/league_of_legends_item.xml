<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/img_item"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:src="@drawable/item_01">

        </ImageView>

        <TextView
            android:id="@+id/tv_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_item"
            android:text="Búa Rìu Sát Thần"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold|italic">

        </TextView>

        <TextView
            android:id="@+id/tv_mfg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_item"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_item"
            android:text="MFG: 21/06/2020"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:id="@+id/img_money"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dollars">

        </ImageView>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/img_money"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/img_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/img_money"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/plus_item">

        </ImageView>

        <TextView
            android:id="@+id/tv_amount_order"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/img_plus"
            android:gravity="center"
            android:text="05"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/img_minus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/img_money"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_amount_order"
            android:src="@drawable/minus_item">
        </ImageView>
    </RelativeLayout>
</layout>